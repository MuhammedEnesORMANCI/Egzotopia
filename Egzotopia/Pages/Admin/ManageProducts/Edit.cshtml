@page "{id:int}"
@model Egzotopia.Pages.Admin.ManageProducts.EditModel
@{
    ViewData["Title"] = "Ürün Düzenle";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">✏️ Ürün Düzenle: @Model.Product.Name</h4>
                    <a href="/Admin/ManageProducts" class="btn btn-sm btn-light text-dark fw-bold">Listeye Dön</a>
                </div>
                <div class="card-body">

                    <form method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="Product.Id" value="@Model.Product.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ürün Adı</label>
                            <input type="text" name="Product.Name" class="form-control" value="@Model.Product.Name" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ürün Açıklaması</label>
                            <textarea name="Product.Description" class="form-control" rows="4">@Model.Product.Description</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Hayvan Türü (AnimalType)</label>
                            <input type="text" name="Product.AnimalType" class="form-control" value="@Model.Product.AnimalType" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kategori (ProductType)</label>
                            <select name="Product.ProductType" class="form-select" required>
                                <option value="">Seçiniz...</option>
                                <!option value="Yem" @(Model.Product.ProductType == "Yem" ? "selected" : "")>Yem</!option>
                                <!option value="Kafes" @(Model.Product.ProductType == "Kafes" ? "selected" : "")>Kafes</!option>
                                <!option value="Aksesuar" @(Model.Product.ProductType == "Aksesuar" ? "selected" : "")>Aksesuar</!option>
                                <!option value="Oyuncak" @(Model.Product.ProductType == "Oyuncak" ? "selected" : "")>Oyuncak</!option>
                                <!option value="Bakım" @(Model.Product.ProductType == "Bakım" ? "selected" : "")>Bakım</!option>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Fiyat (₺)</label>
                                <input type="number" step="0.01" name="Product.Price" class="form-control"
                                       value="@Model.Product.Price.ToString().Replace(',', '.')" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Stok</label>
                                <input type="number" name="Product.StockQuantity" class="form-control"
                                       value="@Model.Product.StockQuantity" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Resim URL</label>
                            <input type="text" name="Product.ImageUrl" class="form-control" value="@Model.Product.ImageUrl" />
                        </div>

                        <button type="submit" class="btn btn-warning w-100 btn-lg mt-3">💾 Kaydet</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>