@page
@model Egzotopia.Pages.Profile.EditModel
@{
    ViewData["Title"] = "Bilgileri Güncelle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger">@TempData["Hata"]</div>
            }

            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">✏️ Profil Düzenle</h4>
                </div>
                <div class="card-body p-4">

                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Ad Soyad</label>

                            <input type="text"
                                   name="GelenIsim"
                                   class="form-control form-control-lg"
                                   value="@Model.EditData?.FullName"
                                   required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">E-posta</label>
                            <input type="text" class="form-control bg-light" value="@Model.EditData?.Email" readonly />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Profile/Index" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-success px-4">💾 Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>